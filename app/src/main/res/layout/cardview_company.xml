<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/companyCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/backgroundColor"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/cardContentLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/cardBackground"
        android:gravity="start">

        <!-- 앞면 -->
        <TextView
            android:id="@+id/welfare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복지 지표"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1인 평균 급여액"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/salaryContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/work_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유연근무제 사용 현황"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/work_systemContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/man_parental_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="육아휴직 사용률(남)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/man_parental_leaveContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/woman_parental_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="육아휴직 사용률(여)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/woman_parental_leaveContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/parental_leave_longevity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="육아휴직 복귀 후 12개월 이상 근속자 수"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/parental_leave_longevityContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/parental_leave_reinstatement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="육아휴직 복귀율"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/parental_leave_reinstatementContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/remuneration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="임원 보수 정보"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/remunerationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/number_employees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 직원 수"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/number_employeesContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/years_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평균 근속 연수"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/years_serviceContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>
        <!-- 앞면 -->
        <TextView
            android:id="@+id/financial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재무 정보"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/Total_assets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자산 통계"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/Total_assets_2024Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/Total_assets_2023Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/Total_assets_2022Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/Total_assets_rateContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼마"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
